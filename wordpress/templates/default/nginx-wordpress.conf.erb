server {
  listen 80;
  listen [::]:80;

  <% if @enable_ssl -%>

  listen 443 ssl;
  ssl_protocols TLSv1.2 TLSv1.1 TLSv1; #Turns off TLSv3 to protect against POODLE Attack
  ssl on;
  ssl_prefer_server_ciphers on; # Force server to use ciphers or it will default to browser settings
  ssl_ciphers "EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH";
  ssl_ecdh_curve secp384r1; # Requires nginx >= 1.1.0
  ssl_session_cache shared:SSL:10m;
  ssl_session_tickets off; # Requires nginx >= 1.5.9
  ssl_stapling on; # Requires nginx >= 1.3.7
  ssl_stapling_verify on; # Requires nginx => 1.3.7

  ssl_certificate <%= @ssl_certificate %>; # Must be a bundle of crt and ca, or must be correct order or nginx will not start
  ssl_certificate_key <%= @ssl_certificate_key %>;

  <% end -%>

  root   <%= @web_root %>;

  server_name <%= @domains %>;

  error_log   /var/log/nginx/<%= @app_name %>.error.log;

  index index.php index.htm index.html;
  <% if @enable_ssl -%>
  if ($http_x_forwarded_proto != "https") {
    rewrite ^(.*)$ https://$server_name$1 permanent;
  }
  <% end -%>

  client_max_body_size 100M;

  client_body_timeout             15s;
  client_header_timeout           15s;
  keepalive_timeout               75s;
  send_timeout                    25s;

  location = /favicon.ico {
    log_not_found off;
    access_log off;
  }

  location = /robots.txt {
    rewrite ^ /index.php;
    allow all;
    log_not_found off;
    access_log off;
  }

  location ~ /\. {
    deny all;
  }

  location ~* /(?:uploads|files)/.*\.php$ {
    deny all;
  }

  location / {
    try_files $uri $uri/ /index.php?q=$uri&$args;
  }

  rewrite ^/sitemap(-+([a-zA-Z0-9_-]+))?\.xml$ "/index.php?xml_sitemap=params=$2" last;
  rewrite ^/sitemap(-+([a-zA-Z0-9_-]+))?\.xml\.gz$ "/index.php?xml_sitemap=params=$2;zip=true" last;
  rewrite ^/sitemap(-+([a-zA-Z0-9_-]+))?\.html$ "/index.php?xml_sitemap=params=$2;html=true" last;
  rewrite ^/sitemap(-+([a-zA-Z0-9_-]+))?\.html.gz$ "/index.php?xml_sitemap=params=$2;html=true;zip=true" last;
  rewrite /wp-admin$ $scheme://$host$uri/ permanent;

  location ~* ^.+\.(ogg|ogv|svg|svgz|eot|otf|woff|mp4|ttf|rss|atom|jpg|jpeg|gif|png|ico|zip|tgz|gz|rar|bz2|doc|xls|exe|ppt|tar|mid|midi|wav|bmp|rtf)$ {
    access_log off; 
    log_not_found off; 
    expires max;
  }

  location ~* \.(?:css|js)$ {
    access_log off;
    expires 1y;
  }

  set $skip_cache 0;

  # POST requests and urls with a query string should always go to PHP
  if ($request_method = POST) {
      set $skip_cache 1;
  }   
  if ($query_string != "") {
      set $skip_cache 1;
  }   

  # Don’t cache uris containing the following segments
  if ($request_uri ~* "/wp-admin/|/xmlrpc.php|wp-.*.php|/feed/|index.php|sitemap(_index)?.xml") {
      set $skip_cache 1;
  }   

  # Don’t use the cache for logged in users or recent commenters
  if ($http_cookie ~* "comment_author|wordpress_[a-f0-9]+|wp-postpass|wordpress_no_cache|wordpress_logged_in") {
      set $skip_cache 1;
  }

  location ~ [^/]\.php(/|$) {
    fastcgi_split_path_info ^(.+?\.php)(/.*)$;
    if (!-f $document_root$fastcgi_script_name) {
      return 404;
    }
    fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    fastcgi_pass unix:/run/php/php7.0-fpm.sock;
    fastcgi_read_timeout 150;
    fastcgi_cache_bypass $skip_cache;
    fastcgi_no_cache $skip_cache;
    fastcgi_cache <%= @app_name %>;
    fastcgi_cache_valid 60m;
    include snippets/fastcgi-php.conf;
    fastcgi_param PHP_VALUE "post_max_size=80M \n upload_max_filesize=80M \n max_input_time=120 \n max_execution_time=120 \n max_input_vars=10000";
    fastcgi_param PHP_FLAG "display_errors=on";
  }

  location ~ /purge(/.*) {
	    fastcgi_cache_purge <%= @app_name %> "$scheme$request_method$host$1";
	}	

  include  <%= @web_root %>/nginx/*.conf;

  <% if @multisite -%>
  #TEST
    add_header Access-Control-Allow-Origin "*";
  

  rewrite /wp-admin$ $scheme://$host$uri/ last;
  rewrite ^/(wp-.*.php)$ /wp/$1 last;
  rewrite ^/(wp-(content|admin|includes).*) /wp/$1 last;
  <% end -%>

}
